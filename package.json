{
  "name": "@calebboyd/async",
  "version": "2.0.1",
  "description": "Async tools",
  "main": "index.js",
  "typings": "index.d.ts",
  "repository": {
    "type": "git",
    "url": "git://github.com/calebboyd/async.git"
  },
  "scripts": {
    "docts": "docts",
    "commitlint": "commitlint -f $(git rev-list --tags --max-count=1) -t $(git log --pretty=%H | head -1)",
    "lint": "eslint \"*.ts\" --fix --ext \"*.ts\"",
    "clean": "rimraf \"*.{js,d.ts}\"",
    "build:docs": "rimraf docs && typedoc --plugin typedoc-plugin-markdown --exclude '*.spec.*' --excludeNotDocumented && rimraf docs/README.md",
    "build": "npm run clean && npm run lint && tsc && npm run build:docs",
    "prepublishOnly": "npm run build && npm run commitlint",
    "postpublish": "npm run clean",
    "watch:typescript": "tsc -w",
    "watch:test": "jest --watchAll",
    "watch": "npm run build && concurrently -k \"npm:watch:typescript\" \"npm:watch:test\" -c blue,green",
    "test": "jest --passWithNoTests"
  },
  "files": [
    "lib",
    "!**/*.spec.js",
    "*.js",
    "*.d.ts"
  ],
  "author": "Caleb Boyd",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-angular": "^11.0.0",
    "@types/jest": "^26.0.19",
    "@types/node": "^14.14.19",
    "@typescript-eslint/eslint-plugin": "^4.11.1",
    "@typescript-eslint/parser": "^4.11.1",
    "concurrently": "^5.3.0",
    "eslint": "^7.17.0",
    "eslint-config-prettier": "~7.1.0",
    "eslint-plugin-prettier": "^3.3.0",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.4.4",
    "typedoc": "^0.20.10",
    "typedoc-plugin-markdown": "^3.2.1",
    "typescript": "^4.1.3"
  },
  "dependencies": {},
  "jest": {
    "preset": "ts-jest",
    "testPathIgnorePatterns": [
      ".*\\.js"
    ]
  },
  "prettier": {
    "parser": "typescript",
    "semi": false,
    "singleQuote": true,
    "printWidth": 100
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-angular"
    ],
    "rules": {
      "type-enum": [
        2,
        "always",
        [
          "build",
          "chore",
          "ci",
          "docs",
          "feat",
          "fix",
          "perf",
          "refactor",
          "release",
          "revert",
          "style",
          "test"
        ]
      ]
    }
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "prettier/@typescript-eslint",
      "plugin:prettier/recommended"
    ],
    "ignorePatterns": [
      "*.d.ts"
    ],
    "overrides": [
      {
        "files": [
          "*.spec.ts"
        ],
        "env": {
          "jest": true
        }
      }
    ],
    "rules": {
      "@typescript-eslint/no-explicit-any": 0,
      "@typescript-eslint/explicit-function-return-type": 0,
      "@typescript-eslint/no-use-before-define": 0
    }
  }
}
