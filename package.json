{
  "name": "@calebboyd/async",
  "version": "2.0.0",
  "description": "Async tools",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git://github.com/calebboyd/async.git"
  },
  "scripts": {
    "commitlint": "commitlint -f $(git rev-list --tags --max-count=1) -t $(git log --pretty=%H | head -1)",
    "lint": "eslint \"*.ts\" --fix --ext \"*.ts\"",
    "clean": "rimraf \"*.{js,d.ts}\"",
    "build": "npm run clean && npm run lint && tsc",
    "prepublishOnly": "npm run build && npm run commitlint",
    "postpublish": "npm run clean",
    "watch:typescript": "tsc -w",
    "watch:test": "jest --watchAll",
    "watch": "npm run build && concurrently -k \"npm:watch:typescript\" \"npm:watch:test\" -c blue,green",
    "test": "jest --passWithNoTests"
  },
  "files": [
    "lib",
    "!**/*.spec.js",
    "*.js",
    "*.d.ts"
  ],
  "author": "Caleb Boyd",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^14.0.14",
    "rimraf": "^3.0.2",
    "typescript": "^3.9.6",
    "@commitlint/cli": "^9.0.1",
    "@commitlint/config-angular": "^9.0.1",
    "@types/jest": "^26.0.3",
    "@typescript-eslint/eslint-plugin": "^3.5.0",
    "@typescript-eslint/parser": "^3.5.0",
    "concurrently": "^5.2.0",
    "eslint": "^7.4.0",
    "eslint-config-prettier": "~6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "jest": "^26.1.0",
    "prettier": "^2.0.5"
  },
  "dependencies": {},
  "jest": {
    "testRegex": ".*?(\\.spec).js",
    "watchPathIgnorePatterns": [
      "\\.ts$"
    ]
  },
  "prettier": {
    "parser": "typescript",
    "semi": false,
    "singleQuote": true,
    "printWidth": 100
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-angular"
    ],
    "rules": {
      "type-enum": [
        2,
        "always",
        [
          "build",
          "ci",
          "docs",
          "feat",
          "fix",
          "perf",
          "refactor",
          "release",
          "revert",
          "style",
          "test"
        ]
      ]
    }
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "prettier/@typescript-eslint",
      "plugin:prettier/recommended"
    ],
    "ignorePatterns": [
      "*.d.ts"
    ],
    "overrides": [
      {
        "files": [
          "*.spec.ts"
        ],
        "env": {
          "jest": true
        }
      }
    ],
    "rules": {
      "@typescript-eslint/no-explicit-any": 0,
      "@typescript-eslint/explicit-function-return-type": 0,
      "@typescript-eslint/no-use-before-define": 0
    }
  }
}
